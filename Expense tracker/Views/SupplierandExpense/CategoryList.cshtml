
@using Expense_tracker.Models;
@using System.Data;
@{
    ViewBag.Title = "CategoryList";
}

<div class="container">
    <h5 class="mx-2"></h5>
    <form method="post" action="/SupplierandExpense/SupplierListAddFormComplete">
        <div class="card bg-white my-3 py-3">
            <div class="row d-flex justify-content-between">
                <div class="col-md-3">
                    <h6 class="mx-2">Category List</h6>
                </div>
                <div class="col-md-6 text-end mx-4">
                    <a class="btn btn-outline-primary" href="/SupplierandExpense/CategoryListAddForm">Add Category</a>
                </div>
            </div>
        </div>
    </form>
    <div class="card bg-white my-3 py-3">
        <table class="table table-striped  table-responsive">
            <tbody class="table-responsive">
                <tr>
                    <th class="bold">Category ID</th>
                    <th>Category Name</th>
                    <th>Supplier Name</th>
                    <th>Shop Name</th>
                    <th>Action</th>
                </tr>
                @foreach (DataRow row in Model.WorkDataset.TempDataSet.Tables[0].Rows)
                {
                    <tr>
                        <td>@row["CAT_ID"].ToString()</td>
                        <td>@row["CATEGORY_NAME"].ToString()</td>
                        <td>@row["SUPPLIER_NAME"].ToString()</td>
                        <td>@row["SHOP_NAME"].ToString()</td>
                        <td>
                            <a href="/SupplierandExpense/EditCategory/@row["CAT_ID"].ToString()" class="btn btn-outline-secondary">Edit</a>
                            <a href="/SupplierandExpense/DeleteCategory/@row["CAT_ID"].ToString()" class="btn btn danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
